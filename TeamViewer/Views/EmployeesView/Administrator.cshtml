@section scripts {
    @Scripts.Render("~/bundles/app")
}

@{
    ViewBag.Title = "Administrator";
}
<h1></h1>

<div class="col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading h4">
            Administracja
        </div>
        <div class="panel-body">
                <div class="btn btn-default btn-lg btn-block" data-toggle="collapse" data-target="#addEmployee"> Dodaj pracownika </div>
            <br />
                <div class="btn btn-default btn-lg btn-block" data-toggle="collapse" data-target="#addManager"> Dodaj managera </div>
            <br />
                <div class="btn btn-default btn-lg btn-block" data-toggle="collapse" data-target="#editEmployee"> Edytuj pracownika </div>
            <br />
                <div class="btn btn-default btn-lg btn-block" data-toggle="collapse" data-target="#editManager"> Edytuj managera </div>
            <br />
                <div class="btn btn-danger btn-lg btn-block" data-toggle="collapse" data-targer="#deleteEmployee"> Usuń pracownika </div>
            <br />
                <div class="btn btn-danger btn-lg btn-block" data-toggle="collapse" data-targer="#deleteManagera"> Usuń managera </div>
            <br />
        </div>
        </div>
    </div>
<div class="collapse" id="addEmployee">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading h4">
                Dodaj pracownika
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addEmployee">
                    <div class="form-group">
                        <div class="col-sm-10">
                           <strong>Manager: </strong><span><select class="form-control" data-bind="options:managers, optionsText: 'Name', value: newEmployee.Manager"></select></span>
                        </div>
                    </div>
                    <div class="form-group" data-bind="with: newEmployee">
                        <div class="col-sm-10">
                            <strong>Imię Nazwisko: </strong><span><input type="text" class="form-control" id="inputName" data-bind="value:Name" /></span>
</div>
                    </div>
                    <button type="submit" align="center" class="btn btn-primary btn-lg btn-block">Dodaj</button>
                </form>
            </div>
        </div>
    </div>
</div>
            
<div  id="addManager" class="collapse">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading h4">
                Dodaj managera
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addManager">
                    <div class="form-group" data-bind="with: newManager">
                        <div class="col-sm-10">
                            <strong>Imię Nazwisko: </strong><span><input type="text" class="form-control" id="inputName" data-bind="value:Name" /></span>
                        </div>
                    </div>
                    <button type="submit" align="center" class="btn btn-primary btn-lg btn-block">Dodaj</button>
                </form>
            </div>
        </div>
    </div>
</div> 


