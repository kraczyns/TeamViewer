@section scripts {
    @Scripts.Render("~/bundles/app")
}

@{
    ViewBag.Title = "Pracownicy";
}
<h1>

</h1>
<div class="row">

    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading h4"> <span class="glyphicon glyphicon-user"></span> Pracownicy </div>
            <div class="panel-body">
                <label class="panel-title h4"> <span class="glyphicon glyphicon-search"></span> Wyszukiwarka pracowników  </label>
                <div class="searchForm">
                    <input placeholder="Szukaj pracownika..." type="search" class="form-control" data-bind="textInput: query" autocomplete="off" />
                </div>
                   <div class="searchManagerForm">
                    <input placeholder="Szukaj managera..." type="search" class="form-control" data-bind="textInput: manager" autocomplete="off" />
                </div>
                <br>
                <label class="panel-title h4"> <span class="glyphicon glyphicon-th-list"></span> Lista pracowników</label>
                <ul class="list-unstyled" data-bind= "foreach: filteredEmployees">
                    <li>
                        <a href="#" data-bind="click: $parent.getDetails"><span data-bind="text: Name"></span></a>
                    </li>
                </ul>
            </div>
        </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading h4">
                <span class="glyphicon glyphicon-bookmark"></span> Charakterystyka pracownika
            </div>
            <table class="table">
                <tr><td>Wybrany pracownik: </td><td data-bind="text: detail().Name"></td></tr>
                <tr>
                    <td>Przynależność do zespołu: </td>
                    <td>
                        <strong><span data-bind="text: detail().Manager.Name"></span></strong>
                        <ul class="list-unstyled" data-bind="foreach: teamEmployees">
                            <li>
                                <span data-bind="text: Name"></span>
                            </li>
                        </ul>

                    </td>
                </tr>
                <tr><td>Punkty: </td><td data-bind="text: detail().Points"></td></tr>
                <tr><td>Liczba ukonczonych zadan: </td><td> liczba </td></tr>
            </table>
        </div>
    </div> <!-- k cm4 od charakterystyka-->
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading h4">
                <span class="glyphicon glyphicon-pencil"></span>
                Zadania w toku &nbsp;
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: tasks">
                    <li>
                        <span data-bind="text: Id"></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-success">
            <div class="panel-heading h4">
                <span class="glyphicon glyphicon-calendar"></span>
                Urlop
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach: daysOff">
                    <li>
                        <span data-bind="text: Date"></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /ko -->
</div>